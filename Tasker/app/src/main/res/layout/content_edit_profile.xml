<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/alt_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.blaid.tasker.CreateTask"
    tools:showIn="@layout/activity_edit_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView9"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:paddingLeft="5dp"
        android:textSize="17dp"
        android:background="@drawable/rounded_edittext"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:hint="@string/Username" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cancelId"
        android:layout_alignEnd="@+id/cancelId" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="It appears you have no completed tasks..."
        android:paddingLeft="5dp"
        android:textSize="17dp"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/spin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/cancelId"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="#ff0000"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:entries="@array/Task_Types"
        android:background="@drawable/default_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <Button
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/startID"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="#1fcc04"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/cancelId"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="Enter a description of yourself..."
        android:paddingLeft="5dp"
        android:textSize="17dp"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="@drawable/rounded_edittext"
        android:layout_alignBottom="@+id/spin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Task History:"
        android:id="@+id/textView5"
        android:layout_below="@+id/spin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Biography:"
        android:id="@+id/textView15"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginTop="36dp" />


</RelativeLayout>
