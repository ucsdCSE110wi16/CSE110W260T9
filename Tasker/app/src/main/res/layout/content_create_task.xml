<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/createtaskbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.blaid.tasker.CreateTask"
    tools:showIn="@layout/activity_create_task">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/textView9"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Enter title here"
        android:paddingLeft="5dp"
        android:textSize="17dp"
        android:background="@drawable/rounded_edittext"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView10"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView11"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="Enter a description"
        android:paddingLeft="5dp"
        android:textSize="17dp"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:text="Select Time"
        android:id="@+id/button4"
        android:onClick="setTime"
        android:textColor="#FFFFFF"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:text="Select Date"
        android:onClick="setDate"
        android:id="@+id/button6"

        android:textColor="#FFFFFF"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Create Task!"
        android:id="@+id/createTaskButtonId"

        android:textColor="#FFFFFF"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="$00.00"
        android:textSize="17dp"
        android:ems="10"
        android:id="@+id/editText3"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="Enter your location"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="@drawable/rounded_edittext"

        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Pic"
        android:id="@+id/button_profile_picID"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />


</RelativeLayout>
