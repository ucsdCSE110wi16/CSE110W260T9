<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditMyProfile"
    tools:showIn="@layout/activity_create_task">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/text_titleID"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_titleID"
        android:text="Enter title here."
        android:background="#bfbfbf"
        android:layout_toRightOf="@+id/text_titleID"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_of_taskID"
        android:src="@drawable/profile_pic_default"
        android:layout_above="@+id/text_priceID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_toStartOf="@+id/text_priceID"
        android:layout_alignTop="@+id/button_select_timeID"
        android:layout_alignRight="@+id/text_priceID"
        android:layout_alignEnd="@+id/text_priceID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/text_descriptionID"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/text_priceID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_text_descriptionID"
        android:background="#bfbfbf"
        android:layout_above="@+id/text_locationID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:id="@+id/button_select_timeID"
        android:layout_alignBottom="@+id/image_of_taskID"
        android:layout_alignLeft="@+id/edit_text_priceID"
        android:layout_alignStart="@+id/edit_text_priceID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/text_priceID"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/edit_text_locationID"
        android:layout_alignStart="@+id/edit_text_locationID" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edit_text_priceID"
        android:background="#bfbfbf"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/image_of_taskID"
        android:layout_toRightOf="@+id/text_priceID"
        android:layout_toEndOf="@+id/text_priceID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/text_locationID"
        android:textColor="#ffffff"
        android:layout_above="@+id/button_create_taskID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/edit_text_locationID"
        android:background="#bfbfbf"
        android:layout_alignTop="@+id/text_locationID"
        android:layout_alignLeft="@+id/button_create_taskID"
        android:layout_alignStart="@+id/button_create_taskID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task!"
        android:id="@+id/button_create_taskID"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:onClick="setDate"
        android:id="@+id/button_select_timeID"
        android:layout_below="@+id/edit_text_titleID"
        android:layout_alignLeft="@+id/button_select_timeID"
        android:layout_alignStart="@+id/button_select_timeID"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Task Type:"
        android:id="@+id/text_select_pictureID"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/edit_text_titleID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:entries="@array/Task_Types"
        android:background="#bfbfbf"
        android:layout_alignLeft="@+id/button_select_timeID"
        android:layout_alignStart="@+id/button_select_timeID"
        android:layout_alignRight="@+id/button_select_timeID"
        android:layout_alignEnd="@+id/button_select_timeID"
        android:layout_alignBottom="@+id/text_select_pictureID"
        android:layout_alignTop="@+id/text_select_pictureID" />


</RelativeLayout>
