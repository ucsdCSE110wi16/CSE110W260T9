<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditMyProfile"
    tools:showIn="@layout/activity_create_task">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/text_titleID"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:layout_above="@+id/text_select_pictureID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_titleID"
        android:text="Enter title here."
        android:background="#bfbfbf"
        android:layout_above="@+id/text_select_pictureID"
        android:layout_alignRight="@+id/edit_text_priceID"
        android:layout_alignEnd="@+id/edit_text_priceID" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_of_taskID"
        android:layout_above="@+id/text_priceID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_toLeftOf="@+id/text_priceID"
        android:layout_alignRight="@+id/text_priceID"
        android:layout_alignEnd="@+id/text_priceID"
        android:background="#65f2f7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/text_descriptionID"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/edit_text_descriptionID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_text_descriptionID"
        android:background="#bfbfbf"
        android:layout_above="@+id/text_locationID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:id="@+id/button_select_timeID"
        android:layout_alignBottom="@+id/image_of_taskID"
        android:layout_alignLeft="@+id/edit_text_priceID"
        android:layout_alignStart="@+id/edit_text_priceID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/text_priceID"
        android:textColor="#ffffff"
        android:layout_above="@+id/text_descriptionID"
        android:layout_toLeftOf="@+id/spin"
        android:layout_toStartOf="@+id/spin" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edit_text_priceID"
        android:background="#bfbfbf"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/image_of_taskID"
        android:layout_toRightOf="@+id/text_priceID"
        android:layout_toEndOf="@+id/text_priceID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/text_locationID"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/edit_text_locationID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/edit_text_locationID"
        android:background="#bfbfbf"
        android:layout_above="@+id/button_create_taskID"
        android:layout_alignLeft="@+id/button_create_taskID"
        android:layout_alignStart="@+id/button_create_taskID"
        android:layout_alignRight="@+id/edit_text_priceID"
        android:layout_alignEnd="@+id/edit_text_priceID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task!"
        android:id="@+id/button_create_taskID"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:onClick="setDate"
        android:id="@+id/button_select_dateID"
        android:layout_above="@+id/button_select_timeID"
        android:layout_alignLeft="@+id/button_select_timeID"
        android:layout_alignStart="@+id/button_select_timeID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Task Type:"
        android:id="@+id/text_select_pictureID"
        android:fontFamily="Monaco"
        android:textColor="#ffffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignTop="@+id/spin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:entries="@array/Task_Types"
        android:background="#bfbfbf"
        android:layout_above="@+id/image_of_taskID"
        android:layout_toRightOf="@+id/text_select_pictureID"
        android:layout_toEndOf="@+id/text_select_pictureID" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_backID"
        android:src="@android:drawable/ic_menu_revert"
        android:background="#65f2f7"
        android:width="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:id="@+id/text_create_taskID"
        android:textSize="30dp"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:width="200dp"
        android:height="30dp"
        android:layout_gravity="top|left"
        android:layout_alignBottom="@+id/button_backID"
        android:layout_alignLeft="@+id/edit_text_titleID"
        android:layout_alignStart="@+id/edit_text_titleID" />

    <Spinner
        style="@style/spinner_style"
        android:layout_width="80dp"
        android:height="50dp"
        android:layout_height="30dp"
        android:id="@+id/menu_spinnerID"
        android:entries="@array/Menu_Options"
        android:background="#65f2f7"
        android:layout_gravity="top|left"
        android:textAlignment="center"
        android:layout_alignTop="@+id/button_backID"
        android:layout_alignRight="@+id/spin"
        android:layout_alignEnd="@+id/spin"
        android:layout_above="@+id/edit_text_titleID" />


</RelativeLayout>
