<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.CreateAccountActivity.CreateAccountActivity"
    tools:showIn="@layout/activity_create_account"
    android:background="@drawable/alt_background">

    <EditText
        android:paddingLeft="15dp"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:textSize="17dp"
        android:id="@+id/editTextEmail"
        android:hint="E-mail"
        android:background="@drawable/rounded_edittext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:paddingLeft="15dp"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:textSize="17dp"
        android:inputType="textPassword"
        android:id="@+id/editTextPassword"
        android:hint="@string/Password"
        android:password="true"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignLeft="@+id/editTextUsername"
        android:layout_alignStart="@+id/editTextUsername"
        android:layout_marginTop="30dp" />

    <EditText
        android:paddingLeft="15dp"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:textSize="17dp"
        android:id="@+id/editTextPasswordConfirm"
        android:hint="Re-enter password"
        android:password="true"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:id="@+id/editTextUsername"
        android:hint="@string/Username"
        android:textSize="17dp"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignLeft="@+id/editTextEmail"
        android:layout_alignStart="@+id/editTextEmail"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Create Account!"
        android:id="@+id/createButton"
        android:shadowColor="#000000"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/default_button"
        android:width="120dp"
        android:typeface="monospace"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:layout_above="@+id/createButton"
        android:layout_alignLeft="@+id/editTextPasswordConfirm"
        android:layout_alignStart="@+id/editTextPasswordConfirm"
        android:layout_marginBottom="38dp" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/spinnerPicID"
        android:entries="@array/Task_Types"
        android:background="@drawable/green_button"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignRight="@+id/editTextPasswordConfirm"
        android:layout_alignEnd="@+id/editTextPasswordConfirm" />

</RelativeLayout>
