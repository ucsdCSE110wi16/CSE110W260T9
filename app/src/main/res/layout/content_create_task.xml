<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.blaid.tasker.CreateTask"
    tools:showIn="@layout/activity_create_task">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/textViewid"
            android:layout_toEndOf="@+id/textViewid"
            android:layout_toRightOf="@+id/textViewid"
            android:layout_gravity="top"
            android:layout_alignBottom="@+id/doneButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title: "
                android:textSize="24sp"
                android:id="@+id/textViewid"
                android:width="70sp"
                android:height="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter title here"
                android:width="250sp"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_alignTop="@+id/textViewid"
                android:layout_toRightOf="@+id/textViewid"
                android:layout_toEndOf="@+id/textViewid" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Done"
        android:id="@+id/doneButton"
        android:background="@color/colorAccent"
        android:typeface="monospace"
        android:textColor="@color/colorBackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_default_pic"
        android:minWidth="100sp"
        android:minHeight="100sp"
        android:maxWidth="300sp"
        android:maxHeight="300sp"
        android:layout_weight="1.02"
        android:layout_alignTop="@+id/scrollView"
        android:layout_toLeftOf="@+id/doneButton"
        android:layout_toStartOf="@+id/doneButton"
        android:layout_marginTop="60sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Upload_Photo"
        android:id="@+id/photoUploadButtonid"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/doneButton"
        android:layout_alignStart="@+id/doneButton"
        android:gravity="center"
        android:width="150sp"
        android:textColor="@color/colorBackground"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Description"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/photoUploadButtonid"
        android:layout_toStartOf="@+id/photoUploadButtonid"
        android:layout_marginBottom="10sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@color/colorPrimary"
        android:width="400sp"
        android:height="200sp"
        android:gravity="top"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

